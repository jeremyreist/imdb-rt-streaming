{
  "name": "IMDb & Rotten Tomatoes for Streaming",
  "version": "3.0.2",
  "description": "Adds the IMDb and Rotten Tomatoes rating to every available title on Netflix & Disney+",
  "permissions": ["storage"],
  "content_scripts":[
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.disneyplus.com/*"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action":{
    "default_title": "IMDb & Rotten Tomatoes for Streaming"
  },
  "icons": {
    "128": "128.png"
  },
  "manifest_version": 3
}
